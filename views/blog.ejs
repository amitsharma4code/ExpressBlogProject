<%- include('header.ejs')%>
<section class="featured-blog mtb-40" style="padding:40px">
    <div class="container">
        <div class="row">
          <%bl.forEach((item)=>{%>
            
            <div class="col-md-4">
                <div class="blog-box">
                    <img src="<%=item.image.url%>" alt="Laptop, Coding" width="100px" height="300px">
                     
                    <h3><%= item.title%></h3>
                    <span>blog create date</span>
                    <p><%=item.createdAt.toLocaleDateString()%></p>
                    <!-- <span>blog update date</span>
                    <p><%=item.updatedAt.toLocaleDateString()%></p> -->
                    <p><%=item.description.slice(0,170)%></p>
                    <a href="/detailblog/<%=item.id%>" class="btn btn-danger">Read more...</a>
                </div>

            </div>
             
          <% })%>
             
        </div>
    </div>
</section>
<%- include('footer.ejs')%>
 