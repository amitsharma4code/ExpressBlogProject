<%- include('header.ejs')%>

<section class="banner">
    <div class="banner-box">
        <div class="intro-text">
            <div class="intro-text-box">
                <h1>Welcome to our community</h1>
                <p>.Blog is an orgraniziontion that aims to unite people with various mindsets for the collective goal of helping people. Learn more about our mission and vision to get know us</p>
            </div>
        </div>
        
        <img src="/image/intro-img.jpg" alt="Laptop, Coding">
    </div>
</section>
<section class="featured-blog mtb-40">
    <div class="container">
        <div class="row">
          <%d.forEach((item)=>{%>
            
            <div class="col-md-4">
                <div class="blog-box">
                    <img src="<%=item.image.url%>" alt="Laptop, Coding" width="100px" height="300px">
                     
                    <h3><%= item.title%></h3>
                    <span>blog create date</span>
                    <p><%=item.createdAt.toLocaleDateString()%></p>
                    <!-- <span>blog update date</span>
                    <p><%=item.updatedAt.toLocaleDateString()%></p> -->
                    <p><%=item.description.slice(0,170)%></p>
                    <a href="/detailblog/<%=item.id%>" class="btn btn-danger">Read more...</a>
                </div>

            </div>
             
          <% })%>
             
        </div>
    </div>
</section>

<%- include('footer.ejs')%>








