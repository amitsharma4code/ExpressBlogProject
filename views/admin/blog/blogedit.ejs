<%- include('../../header.ejs') %>

  <section>
    <div class="container">
      <div class="body-content">
        <div class="row">
          <div class="col-md-3">
            <div class="dash-left">
              <ul>
                <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
                <li><a href="/admin/blogdisplay" class="active">Blogs</a></li>
                <li><a href="/admin/categorydisplay">Categories</a></li>
                <li><a href="/admin/contactdisplay">Contact</a></li>
                <li><a href="/admin/aboutdisplay">About</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          </div>
          <div class="col-md-9">
            <div class="dash-right">
              <div class="dash-header">
                <div class="dash-title">
                  <h1>Edit Your Blog</h1>
                </div>
                <div class="dash-nav">
                  <!-- Button trigger modal -->
                </div>
              </div>

              <form method="post"  action="/blogupdate/<%=b.id%>" enctype="multipart/form-data">
                <table class="table">
                  <thead>
                  <tr>
                    <th>#ID</th>
                    <th>Title</th>
                    <th>description</th>
                    <th>Image</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                 <tbody>
                  <tr>
                    <td data-label="id">
                     <input type="text" name="id" value="<%=b._id%>"> 
                    </td>
                    <td>
                      <input width="5px" type="text" name="title" value="<%=b.title%>">
                    </td>
                    <td data-label="name">
                      <textarea name="description" id="description" cols="15" rows="4"><%=b.description%></textarea>
                    </td>
                    <td data-label="image">
                      <input type="file" name="image">
                      <img src="<%=b.image.url%>" alt="img" width="250px" height="100px">
                    </td>
                    <td data-label="submit"> 
                      <input type="submit" value="Update" style="background-color:black; color: yellow;">
                    </td>
                  </tr>
                </tbody>
                </table>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('../../footer.ejs') %>