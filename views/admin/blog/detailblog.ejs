<%-include('../../header.ejs')%>
    <section class="blog-detail mtb-40" style="padding:40px;">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="blog-left">
                        <div class="card" style="width: 28rem;">
                            <img class="card-img-top" src="<%=d.image.url%>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=d.title%>
                                </h5>
                                <p class="card-text">
                                    <%=d.description%>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="blog-right">
                        <div class="right-widget recent-post">
                            <h3>Recent Blogs</h3>
                            <% rec.forEach((items)=>{ %>
    
                                <a href="<%= items._id %>">
                                    <div class="rb-box">
                                        <div class="rb-box-img">
                                            <img src="<%= items.image.url %>" width="100px" height="67px" alt="blog1" />
                                        </div>
                                        <div class="rb-box-desc">
                                            <h4>
                                                <%= items.title %>
                                            </h4>
                                            <p>
                                                <%= items.createdAt.toLocaleDateString() %>
                                            </p>
                                        </div>
                                    </div>
                                </a>
                                <% }) %>
                        </div>
                        <div class="right-widget categories">
                            <h3>Categories</h3>
                            <ul>
                                <% rec.forEach((item)=>{ %>
   
                                
                               <li><a href="/detailbycat/<%= item.category_name %>"><%= item.title %></a></li>
                              
                           <%    }) %>
                           </ul>
                        </div>
                   </div>
               </div> 
                    </div>
                </div>

            </div>
            
        </div>

    </section>
<%-include('../../footer.ejs')%>